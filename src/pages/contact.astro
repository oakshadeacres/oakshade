---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us" description="Get in touch with Oakshade Acres for enquiries about our chickens and goats">
  <!-- Page Header -->
  <section class="bg-earth-700 text-cream py-12">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="font-serif text-4xl sm:text-5xl mb-4">Contact Us</h1>
      <p class="text-earth-200 text-lg max-w-2xl mx-auto">
        Have questions about our animals? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-12">
    <div class="max-w-2xl mx-auto px-4">
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="bg-white rounded-xl shadow-md p-8"
      >
        <!-- Honeypot field for spam prevention -->
        <p class="hidden">
          <label>
            Don't fill this out if you're human: <input name="bot-field" />
          </label>
        </p>

        <input type="hidden" name="form-name" value="contact" />

        <div class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-earth-700 font-medium mb-2">
              Your Name <span class="text-barn-red">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-earth-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition-colors"
              placeholder="John Smith"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-earth-700 font-medium mb-2">
              Email Address <span class="text-barn-red">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-earth-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition-colors"
              placeholder="john@example.com"
            />
          </div>

          <!-- Phone (optional) -->
          <div>
            <label for="phone" class="block text-earth-700 font-medium mb-2">
              Phone Number <span class="text-earth-400">(optional)</span>
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-earth-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition-colors"
              placeholder="(555) 123-4567"
            />
          </div>

          <!-- Interest -->
          <div>
            <label for="interest" class="block text-earth-700 font-medium mb-2">
              I'm interested in... <span class="text-barn-red">*</span>
            </label>
            <select
              id="interest"
              name="interest"
              required
              class="w-full px-4 py-3 border border-earth-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition-colors bg-white"
            >
              <option value="">Please select...</option>
              <option value="chickens">Chickens</option>
              <option value="goats">Goats</option>
              <option value="both">Both chickens and goats</option>
              <option value="general">General enquiry</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-earth-700 font-medium mb-2">
              Your Message <span class="text-barn-red">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 border border-earth-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition-colors resize-vertical"
              placeholder="Tell us what you're looking for..."
            ></textarea>
          </div>

          <!-- Submit -->
          <div>
            <button
              type="submit"
              class="w-full px-6 py-4 bg-forest text-cream rounded-lg hover:bg-forest-light transition-colors font-medium text-lg"
            >
              Send Message
            </button>
          </div>
        </div>
      </form>

      <p class="text-center text-earth-500 text-sm mt-6">
        We typically respond within 1-2 business days.
      </p>
    </div>
  </section>
</Layout>
