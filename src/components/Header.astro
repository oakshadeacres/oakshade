---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/chickens', label: 'Chickens' },
  { href: '/goats', label: 'Goats' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-earth-700 text-cream shadow-lg">
  <div class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <a href="/" class="text-2xl sm:text-3xl font-serif font-bold tracking-wide hover:text-earth-200 transition-colors">
        Oakshade Acres
      </a>
      <nav>
        <ul class="flex gap-1 sm:gap-2">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'px-3 py-2 rounded-lg transition-colors font-medium',
                  currentPath === link.href
                    ? 'bg-forest text-cream'
                    : 'hover:bg-earth-600 text-earth-100',
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>
